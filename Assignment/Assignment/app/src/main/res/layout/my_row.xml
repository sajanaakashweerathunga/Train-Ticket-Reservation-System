<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#AECCE4"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:padding="12dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/train_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Train"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="376dp"
                android:layout_marginTop="8dp"
                android:text="Train"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/train"
                app:layout_constraintStart_toEndOf="@+id/train_text"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageStartStation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/departure"
                app:layout_constraintStart_toStartOf="@+id/train_text"
                app:layout_constraintTop_toBottomOf="@+id/train_text" />

            <TextView
                android:id="@+id/start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="Start Station"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imageStartStation"
                app:layout_constraintTop_toBottomOf="@+id/train_text" />

            <ImageView
                android:id="@+id/imageEndStation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="130dp"
                android:src="@drawable/arrival"
                app:layout_constraintStart_toEndOf="@+id/imageStartStation"
                app:layout_constraintTop_toTopOf="@+id/imageStartStation" />

            <TextView
                android:id="@+id/end_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="end station"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imageEndStation"
                app:layout_constraintTop_toTopOf="@+id/imageEndStation" />

            <ImageView
                android:id="@+id/imageDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/calendar"
                app:layout_constraintStart_toStartOf="@+id/imageStartStation"
                app:layout_constraintTop_toBottomOf="@+id/imageStartStation" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="date"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/start_text"
                app:layout_constraintTop_toBottomOf="@+id/start_text" />

            <ImageView
                android:id="@+id/imageClass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/tickets"
                app:layout_constraintStart_toStartOf="@+id/imageEndStation"
                app:layout_constraintTop_toBottomOf="@+id/imageEndStation" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="time"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/end_text"
                app:layout_constraintTop_toBottomOf="@+id/end_text" />

<!--            <ImageView-->
<!--                android:id="@+id/imageSeats"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="50dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:src="@drawable/seat"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:id="@+id/seats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:text="seats"
                android:textColor="@color/white"
                android:textSize="56sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>